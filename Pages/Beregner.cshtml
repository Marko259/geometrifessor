@page "{Id}"
@using geometrifessor.Components
@using geometrifessor.Services
@using geometrifessor.Models
@inject JsonEmneService EmneService
@model BeregnerModel
@{
    ViewData["Title"] = "Emne";
    var value = RouteData.Values["Id"].ToString();
}
@foreach (var emne in EmneService.GetEmner())
{
    if (emne.Id == value)
    {
        <h1>@ViewData["Title"] - @emne.Title</h1><br />
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="@emne.Image" class="img-fluid" alt="" />
                    if (emne.Id == "retvinklet-trekanter")
                    {
                        <div>Linje a: <input type="number" id="a" /></div>
                        <div>Linje b: <input type="number" id="b" /></div>
                        <button onclick="beregnC()">Beregn</button>
                        <p id="cer">0</p>
                        
                        <p>Formel: c = sqrt((a*a)+(b*b))</p>
                        <svg version="1.1" x="0px" y="0px" viewBox="0 0 300 300" width="800px" height="650px">
                            <polygon id="trekant" class="st0" points="10,10 10,100 100,100 "></polygon>
                            <text id="a" x=0 y=60>a</text>
                        </svg>
                    }
                </div>
            </div>
        </div>
    }
}