@page
@model IndexModel
@{
    ViewData["Title"] = "Forside";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Velkommen til Geometrifessor</h1>
        <p>Lær Geometri med Geometrifessor.</p>
    </div>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item img-fluid active">
            <img src="img/Background 1.jpg" class="img-fluid" alt="Responsive image" style="height: 1000px;" width="1280px">
            <div class="carousel-caption d-none d-md-block">
                <h3>Los Angeles</h3>
                <p>We had such a great time in LA!</p>
            </div>
        </div>
        <div class="carousel-item img-fluid">
            <img src="img/Background 2.jpg" class="img-fluid" alt="Responsive image" style="height: 1000px;" width="1280px">
            <div class="carousel-caption d-none d-md-block">
                <h3>Chicago</h3>
                <p>Thank you, Chicago!</p>
            </div>
        </div>
        <div class="carousel-item img-fluid">
            <img src="img/Background 3.jpg" class="img-fluid" alt="Responsive image" style="height: 1000px;" width="1280px">
            <div class="carousel-caption d-none d-md-block">
                <h3>New York</h3>
                <p>We love the Big Apple!</p>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>