@using Microsoft.AspNetCore.Components.Web
@using geometrifessor.Models
@using geometrifessor.Services
@inject JsonEmneService EmneService
<div class="container">
    <div class="row">
        <nav class="col-sm-3 col-4" id="Scrollspy">
            <ul class="nav nav-pills flex-column">
                <h1>Emner</h1>
                <li class="nav-item">
                    <a class="nav-link active" href="#retvinklet-trekanter">Retvinklet trekanter</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#vilkårlige-trekanter">Vilkårlige trekanter</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#firkanter">Firkanter</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#femkanter">Femkanter</a>
                </li>
            </ul>
        </nav>
        <div class="col-sm-9 col-8">
            @foreach (var emne in EmneService.GetEmner())
            {
                <div id="@emne.Id">
                    <h1>@emne.Title</h1>
                    @if (emne.Id == "retvinklet-trekanter")
                    {
                        <div>Linje a: <input type="number" id="a" /></div>
                        <div>Linje b: <input type="number" id="b" /></div>
                        <button onclick="beregnC()">Beregn</button>
                        <p id="cer">0</p>

                        <p>Formel: c = sqrt((a*a)+(b*b))</p>

                        <svg version="1.1" x="0px" y="0px" viewBox="0 0 300 300" width="800px" height="650px">
                            <polygon id="trekant" class="st0" points="10,10 10,100 100,100 "></polygon>
                            <text id="a" x=0 y=60>a</text>
                        </svg>
                        
                    }
                    else if (emne.Id == "vilkårlige-trekanter")
                    {
                        <div>Grundlinje <input type="number" id="a"></div>
                        <div>Højde <input type="number" id="b"></div><br>
                        <button onclick="beregnBen()">Beregn</button>
                        <p id="cerBen">0</p>
                        
                        <svg version="1.1" x="0px" y="0px" viewBox="0 0 300 300" width="300px" height="300px">
                            <polygon id="ligebenettrekant" class="st0" points="50,10 10,150 100,150 " ></polygon>
                        </svg>
                    }
                </div>
            }
        </div>
    </div>
</div>